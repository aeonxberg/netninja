<Window x:Class="NetNinja.Windows.StoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ManageEquipmentWindow" Height="338.8" Width="534.8"
        DataContext="{Binding Equip}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="87*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="310" Margin="288,0,0,-0.4" VerticalAlignment="Top" Width="239" Grid.ColumnSpan="2">
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="134" Margin="25.2,9.2,0,0" VerticalAlignment="Top" Width="187">
                <Image x:Name="eqpImage"/>
            </Border>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="310" Margin="109,0,0,-0.4" VerticalAlignment="Top" Width="179">
            <ListBox x:Name="EqpListBox" SelectionChanged="ListBox_SelectionChanged"/>
        </Border>
        <Button x:Name="headBtn" Content="Head" HorizontalAlignment="Left" VerticalAlignment="Top" Width="109" Height="24" Margin="0,29,0,0" Click="headBtn_Click"/>
        <Button x:Name="shoulderBtn" Content="Shoulder" HorizontalAlignment="Left" VerticalAlignment="Top" Width="109" Height="24" Margin="0,53,0,0" Click="shoulderBtn_Click"/>
        <Button x:Name="chestBtn" Content="Chest" HorizontalAlignment="Left" VerticalAlignment="Top" Width="109" Height="24" Margin="0,77,0,0" Click="chestBtn_Click"/>
        <Button x:Name="pantsBtn" Content="Pants" HorizontalAlignment="Left" VerticalAlignment="Top" Width="109" Height="24" Margin="0,101,0,0" Click="pantsBtn_Click"/>
        <Button x:Name="bootsBtn" Content="Boots" HorizontalAlignment="Left" VerticalAlignment="Top" Width="109" Height="24" Margin="0,125,0,0" Click="bootsBtn_Click"/>
        <Label Content="Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="317,151,0,0"/>
        <Label Content="STR:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="317,176,0,0"/>
        <Label Content="INT:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="317,202,0,0"/>
        <Label Content="AGL:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="317,227,0,0"/>
        <Label Content="Price:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="317,253,0,0"/>
        <Button x:Name="buyBtn" Content="Buy" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="366,280,0,0" Click="Button_Click"/>
        <Label x:Name="eqpName" Content="DefaultName" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="367,151,0,0"/>
        <Label x:Name="eqpStr" Content="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="367,176,0,0"/>
        <Label x:Name="eqpInt" Content="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="367,202,0,0"/>
        <Label x:Name="eqpAgl" Content="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="367,227,0,0"/>
        <Label x:Name="eqpPrice" Content="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="367,254,0,0"/>

    </Grid>
</Window>
